<HTML>
<HEAD>
<TITLE>Pick a Color, Any Color</TITLE>
<HTA:Application
MaximizeButton = No
> 
</HEAD>
<SCRIPT language="VBScript">
Sub Click_Me
	msgbox one.bgColor
End Sub

Sub Click_Yellow 
	one.bgColor = "Yellow" 
End Sub
Sub Click_Red
	one.bgColor = "Red" 
End Sub
Sub Click_Blue
	one.bgColor = "Blue" 
End Sub
Sub Click_Green
	one.bgColor = "Green" 
End Sub
</SCRIPT>
<BODY>
<Table Border=1 CELLSPACING=5 width="400" HEIGHT = "200" >
<TR> 
	<TD ALIGN = center VALIGN = center ID="one" width="200" bgColor = "Yellow"> <H2> Your Guess </H2></TD>
	<TD ALIGN = center VALIGN = center ID="two" width="200" > <H2> Actual </H2></TD>
</TR>
</Table><BR>

<INPUT TYPE=RADIO NAME="Color" VALUE="Y" onClick="Click_Yellow" CHECKED >Yellow
<INPUT TYPE=RADIO NAME="Color" VALUE="R" onClick="Click_Red">Red
<INPUT TYPE=RADIO NAME="Color" VALUE="B" onClick="Click_Blue">Blue
<INPUT TYPE=RADIO NAME="Color" VALUE="G" onClick="Click_Green">Green
<INPUT TYPE=SUBMIT VALUE="submit"onClick="Click_Me">

</BODY>
</HTML>